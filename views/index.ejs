<%- include('./partials/header'); -%>
    <h1><%= title %></h1>
    <p>Welcome to the home page!</p>

    <div>
        <h2>All Categories</h2>
        <hr>
        <hr>
        <% if(all_categories.length > 0) { %>
            <% all_categories.forEach( (category, index) => { %>
                <div>
                    <h3><a href=<%= category.url %>> <%= `${index + 1}: ${category.name}` %></a></h3>
                    <p><%= category.description %></p>
                    <div>
                        <div><a href="">Edit Category: <strong><%= category.name %> </strong></a></div>
                        <div><a href= <%= category.url + '/delete/' + category._id %> >Delete Category: <strong><%= category.name %></strong></a></div>
                    </div>
                </div>
                <hr>
            <% }); %>
            
        <% } else { %>
            <p>No Categories Found</p>
        <% } %>
        </div>
    </div>

    <hr><hr>
    <div>
        <h2>Add New Category</h2>
        <form method='POST' action="">
            <fieldset>
                <legend>Add New Category</legend>
                <div>
                    <label for="nameCategory">Category Name: </label>
                    <input type="text" id="nameCategory" name="nameCategory" required minlength="3" maxlength="30">
                </div>
                <div>
                    <label for="descriptionCategory">Category Description:</label>
                    <textarea id="descriptionCategory" name="descriptionCategory" required minlength="10" maxlength="200"></textarea>
                </div>
            </fieldset>
            <button type="submit">Add Category</button>
        </form>
    </div>

<%- include('./partials/footer'); -%>
