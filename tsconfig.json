{
  "compilerOptions": {
    "target": "ES2016",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "allowImportingTsExtensions": true,
  },
  "include": ["src/**/*.ts", "__tests__/**/*.ts"],
  "exclude": ["src/**/*types*", "node_modules/"]
}
