{
    "compilerOptions": {
        "target": "ES2020",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["jest"],
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "allowJs": true,        
    },
    "exclude": ["node_modules/", "src/**/*types*"],
    "include": ["src/**/*.ts", "__test__/**/*.ts"]
}
