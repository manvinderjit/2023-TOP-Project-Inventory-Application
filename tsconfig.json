{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "allowImportingTsExtensions": true,
    "isolatedModules": false,
    "noEmit": true
    
  },
  "include": ["src/**/*.ts", "__tests__/**/*.ts"],
  "exclude": ["src/**/*types*", "node_modules/"]
}
