{
    "name": "2023-project-node-express-mongo-session-login",
    "version": "1.0.0",
    "description": "A project created for exhibiting session-based login in a NodeJS, Express, and MongoDB app with EJS view engine and Mongoose ODM.",
    "main": "dist/server.js",
    "type": "module",
    "scripts": {
        "build": "rm -rf dist/ && npx tsc -p tsconfig.build.json && cp -r src/app/views dist/app && cp -r src/public dist/",
        "start": "node ./src/server.js",
        "test": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npx jest --config jest.config.ts --coverage",
        "dev": "cp -r src/app/views dist/app && cp -r src/public dist/ && npx tsc -p tsconfig.build.json -w & nodemon dist/server.js",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "connect-mongo": "^5.1.0",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.3.1",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-fileupload": "^1.4.3",
        "express-session": "^1.18.0",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "jwt-decode": "^4.0.0",
        "mongoose": "^8.6.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/ejs": "^3.1.5",
        "@types/express": "^4.17.21",
        "@types/express-fileupload": "^1.5.1",
        "@types/express-session": "^1.18.0",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^22.5.4",
        "@types/supertest": "^6.0.2",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^10.0.1",
        "node-mocks-http": "^1.16.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4"
    }
}
