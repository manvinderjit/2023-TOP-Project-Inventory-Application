<%- include('./partials/headerProtected'); -%>

            <li class="nav-item"><a href="/" class="nav-link ">Dashboard</a></li>
            <li class="nav-item"><a href="/categories" class="nav-link ">Categories</a></li>     
            <li class="nav-item"><a href="/allproducts" class="nav-link ">Products</a></li>
            <li class="nav-item"><a href="/promos" class="nav-link  ">Promos</a></li>     
            <li class="nav-item"><a href="/guide" class="nav-link" aria-current="page">Guide</a></li>  
        </ul>
    </header>

    <main class="flex-shrink-0">
        <div class="container py-3 border-bottom">

            <h2 class="mb-4 py-3 border-bottom">Category: <%= title %> </h2>            
            <p>Welcome, <%= username %>!</p>

            <form method="POST" action="/logout">
                <button class="btn btn-outline-primary me-2">Logout</button>        
            </form>

        </div>
        <div class="container mt-3">
            <% if(locals.error && locals.error !=='' && locals.error !== undefined) { %>
                
                <div class="alert alert-warning w-50 m-auto" role="alert">
                    Error: <%= error %>
                </div>
                <div class="card-body m-auto text-center">
                    <a href="/categories" class="btn btn-primary ">Back To All Categories</a>
                </div>
            <% } else if(typeof success !== 'undefined') { %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>
            
                <div class="row row-cols-1 row-cols-md-1 g-4 m-3">
                    <div class="col m-6">
                        <div class="card w-50 m-auto text-center">
                            
                           
                            <div class="card-body">
                                <form method='POST' action="" >
                                    <fieldset>
                                         <legend class="bg-light fs-6 py-2 fw-bold">
                                                Edit Category Details: <%= categoryName %> 
                                         </legend>
                                        <div class="mb-3">
                                            <label class="form-label" for="categoryName">Category Name: </label>
                                            <input class="form-control" type="text" id="categoryName" name="categoryName" required minlength="3" maxlength="30" required pattern="^[a-zA-Z0-9.\-_\(\) ]{3,30}$" value='<%= categoryName %>' >
                                            <div id="categoryNameError" aria-live="polite"></div>
                                        </div >
                                        <div class="mb-3">
                                            <label class="form-label" for="categoryDescription">Category Description: </label>
                                            <textarea class="form-control" type="text" id="categoryDescription" name="categoryDescription" minlength="5" maxlength="100" pattern="^[a-zA-Z0-9.\-_\(\) ]{5,100}$" required ><%= categoryDescription %></textarea>
                                            <div id="categoryDescriptionError" aria-live="polite"></div>
                                        </div >
                                    </fieldset>
                                    <div class="mb-3 d-flex justify-content-center">
                                        <button type="submit" class="btn btn-primary">Update Category</button>
                                    </div>
                                </form>
                                
                            <hr>
                            <div class="card-body">
                                <a href="/categories" class="btn btn-primary ">Back To All Categories</a>
                            </div>
                        </div>
                    </div>
                
                </div>
        </div>
    </main>
    <script src="/scripts/categoryCreate.js"></script>
<%- include('./partials/footer'); -%>
